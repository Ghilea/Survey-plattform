@model Tengella.Survey.Web.Models.DistributionViewModel

@{
    ViewData["Title"] = "Lägg till e-postadresser";
}

<div class="d-flex flex-column justify-content-start align-items-center gap-5 min-vh-100 my-5">
    <div class="col-md-6 text-light text-center text-md-left fadeInLeft" data-wow-delay="0.3s">
        <h1 class="h1-responsive font-weight-bold mt-sm-5">Lägg till kund</h1>
        <hr class="hr-light"> 
    </div>

<div class="col-6 my-3 p-5 bg-gradient rounded box-shadow">
    @using (Html.BeginForm("Create", "Distribution"))
    {
        @Html.ValidationSummary(true)

        <div class="d-flex flex-column gap-3">
            <div class="form-group">
                    @Html.LabelFor(m => m.Name, "Namn", new { @class = "text-light"})
                @Html.TextBoxFor(m => m.Name, new { placeholder = "Skriv in kundens namn", @class = "form-control", required = true})
            </div>

            <div class="form-group">
                <div class="text-2xl flex flex-row gap-x-5">
                        @Html.LabelFor(m => m.DistributionTypeId, "Typ av kund", new { @class = "text-light"})
                        @Html.DropDownListFor(m => m.DistributionTypeId, @Model.ListOfType?.Select(st => new SelectListItem { Value = st.Id.ToString(), Text = st.Name }), "Välj typ", new { title = "Typ", @id = "surveyType", @class = "form-control form-select", required = true })
                </div>
            </div>

            <div class="form-group" id="textboxContainer">
                    @Html.LabelFor(model => model.OrganizationNumber, "Organisationsnummer", new { @class = "text-light"})
                @Html.TextBoxFor(model => model.OrganizationNumber, new { @class = "form-control" })
            </div>

            <div class="form-group">
                    @Html.LabelFor(model => model.Email, "E-postadress", new { @class = "text-light"})
                @Html.TextBoxFor(model => model.Email, new { placeholder = "Skriv in kundens e-postadress", @class = "form-control", required = true })
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-light">Lägg till</button>
                @Html.ActionLink("Gå tillbaka", "Index", "Distribution", null, new { @class = "btn btn-secondary", required = true })
            </div>
        </div>
    }

</div>
</div>

@section Scripts {
    <script defer src="~/js/OrganizationNumber.js"></script>
}